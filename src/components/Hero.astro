---
import { getSvg } from '../utils/help';
import { marked } from 'marked';
import { authors } from '../utils/ghost-store';
import { Sprout } from '@lucide/astro';

import Now from './shortcode/Now.astro';

import config from '../data/config';

const author = authors.authors[0];
---

<div class="markdown hero">
    <h2 class="book-title"><a href="/about/">Hello，我是 {author.name}！<Sprout /></a></h2>
    <div class="bio" set:html={marked.parse(author.bio)} />
    <div class="social">
        {
            config.social.map((e) => (
                <a class="icon-rotate-shake" title={e.title} target="_blank" href={e.url} rel="me noopener noreferrer">
                    <Fragment set:html={getSvg(e.name, '0 0 30 30')} />
                </a>
            ))
        }
    </div>
    <Now />
    <hr class="hero-line" />
</div>
