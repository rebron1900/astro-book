{
    "extends": "astro/tsconfigs/strict",
    "include": [".astro/types.d.ts", "**/*"],

    "compilerOptions": {
        "jsx": "react-jsx",
        "jsxImportSource": "react",
        "baseUrl": ".",
        "paths": {
            "@components/*": ["src/components/*"],
            "@content/*": ["src/content/*"],
            "@layouts/*": ["src/layouts/*"],
            "@pages/*": ["src/pages/*"],
            "@plugins/*": ["src/plugins/*"],
            "@utils/*": ["src/utils/*"],
            "@styles/*": ["src/styles/*"],
            "@assets/*": ["src/assets/*"]
        }
    }
}
